<%- include('_admin'); %>
<div class="col-9">
        <div id="department_container">
                <h4><a class="btn btn-secondary" href="/admins/add-department"><i class="fa fa-plus"></i>Create New</a> DEPARTMENTS LIST </h4>
        
             <table class="table table-fluid" id="myTable">
                 <thead>
                     <tr>
                         <th>Sr no</th>
                         <th>Dept Name</th>
                         <th>Short Name</th>
                         <th>Dept Code</th>
                         <th>Creation Date</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                 <tbody>
                    <% for(department of departments){ %>

                     <tr>
                         <td class="count"></td>   
                         <td> <%= department.departmentname %></td>
                         <td><%= department.shortname %></td>
                         <td> <%= department.departmentcode %></td>
                         <td> <%= department.createdAt %></td>
                         <td><a href=""><i class="fas fa-edit"></i></a>   
                            <a href="/departments/destroy/<%= department.id %>"><i class="fas fa-trash"></i></a>
                        </td>
                     </tr>
                     <% } %>

                 </tbody>
           
             </table>
           
        </div>
</div>
